<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgProfileAvatar"
        android:layout_width="148dp"
        android:layout_height="141dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/border_round" />

    <TextView
        android:id="@+id/tvProfileHoVaTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:hint="Họ và tên"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/boder_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:paddingLeft="30dp"
                android:text="Tài khoản"
                android:textIsSelectable="false"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProfileTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:textIsSelectable="false"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/boder_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:paddingLeft="30dp"
                android:text="Số điện thoại"
                android:textIsSelectable="false"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProfileSDT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/boder_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView77"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:paddingLeft="30dp"
                android:text="Địa chỉ"
                android:textIsSelectable="false"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProfileDiaChi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:textIsSelectable="false"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/boder_line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:paddingLeft="30dp"
                android:text="Ngày sinh"
                android:textIsSelectable="false"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProfileNgaySinh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:textIsSelectable="false"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnProfileChinhSua"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="32dp"
            android:layout_weight="0"
            android:background="@drawable/border_button"
            android:drawableLeft="@android:drawable/ic_menu_edit"
            android:paddingHorizontal="10dp"
            android:text="Chỉnh sửa  thông tin"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</LinearLayout>